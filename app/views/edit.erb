<h1>Edit <%= @skill.title %></h1>
<form action="/skills/<%= @skill.id %>" method="POST" class="container">
  <input type="hidden" name="_method" value="PUT" />
  <div class="form-group">
    <label class="col-md-2" for="title">Task Title:</label>
    <div class="col-md-10"><input name="skill[title]" type="text" class="form-control" id="title" placeholder="Title" value= "<%= @skill.title %>"</div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="details">Task Details:</label>
    <div class="col-md-10"><input name="skill[description]" type="textarea" class="form-control" id="details" placeholder="Details" value=<%= @skill.description %>></div>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Submit</button>
</form>
